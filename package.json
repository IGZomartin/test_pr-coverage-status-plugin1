{
  "name": "backend-features",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node ./src/start",
    "test": "npm run lint && npm run test-integration && npm run test-acceptance",
    "test-unit": "./node_modules/.bin/mocha --recursive ./test/unit",
    "test-integration": "./node_modules/.bin/mocha --recursive ./test/integration",
    "test-acceptance": "./node_modules/.bin/cucumber-js ./test/acceptance/features -r ./test/acceptance/step_definitions --format pretty",
    "test-acceptance-only": "./node_modules/.bin/cucumber-js ./test/acceptance/features -r ./test/acceptance/step_definitions --tags @only --format pretty",
    "test-acceptance-hc": "./node_modules/.bin/cucumber-js ./test/hc/features -r ./test/acceptance/step_definitions --format pretty",
    "coverage": "./node_modules/istanbul/lib/cli.js cover ./node_modules/.bin/cucumber-js ./test/acceptance/features -- -r ./test/acceptance/step_definitions --format json:tests_result.json",
    "coverage-hc": "./node_modules/istanbul/lib/cli.js cover ./node_modules/.bin/cucumber-js test/hc/features -- -r ./test/acceptance/step_definitions --format json:tests_result.json",
    "coverage-win": "node ./node_modules/istanbul/lib/cli.js cover node_modules/cucumber/bin/cucumber.js test/acceptance/features -- -r ./test/acceptance/step_definitions --format json:tests_result.json",
    "lint": "eslint src test-unit test-acceptance test-integration",
    "honestcode": "honestcode SylhloxoorybhxoxisrkG2es ./tests_result.json"
  },
  "repository": {
    "type": "git",
    "url": "https://us-gitlab.intelygenz.com/honestcode.io/backend-features.git"
  },
