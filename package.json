    "semver": "^5.1.0",
    "sequelize": "^3.14.1",
    "shortid": "^2.2.6",
    "winston": "^2.2.0",
    "winston-papertrail": "^1.0.2"
  },
  "devDependencies": {
    "cucumber": "^1.2.1",
    "eslint": "^2.2.0",
    "eslint-plugin-extra-rules": "^0.6.1",
    "honestcode": "^1.0.10",
    "istanbul": "^0.4.0",
    "mocha": "^2.3.4",
